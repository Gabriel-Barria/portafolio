---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<Layout title="Portafolio - Gabriel Barria">
  <Header slot="header" />
  <div class="container mx-auto px-4 py-20">
    <section class="text-center mb-20">
      <h1 class="text-5xl font-bold mb-4 hero-gradient bg-clip-text text-transparent">Gabriel Barria</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">Desarrollador Full Stack</p>
      <div class="flex gap-4 justify-center">
        <a href="/projects" class="btn-primary">Ver Proyectos</a>
        <a href="/contact" class="btn-secondary">Contacto</a>
      </div>
    </section>
    <section class="grid md:grid-cols-3 gap-8">
      <div class="card"><h3 class="text-xl font-bold mb-2">Frontend</h3><p class="text-gray-600 dark:text-gray-400">React, TypeScript, Tailwind CSS</p></div>
      <div class="card"><h3 class="text-xl font-bold mb-2">Backend</h3><p class="text-gray-600 dark:text-gray-400">Node.js, Python, PostgreSQL</p></div>
      <div class="card"><h3 class="text-xl font-bold mb-2">DevOps</h3><p class="text-gray-600 dark:text-gray-400">Docker, Git, Nginx</p></div>
    </section>
  </div>
  <Footer slot="footer" />
</Layout>
